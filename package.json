{
  "name": "flask-tailwindcss-starter",
  "description": "A starter project using Flask, TailwindCSS v4.0 and ready to deploy in Vercel",
  "version": "1.1.0",
  "author": "Odhy Pradhana (odhyp.com)",
  "license": "MIT",
  "keywords": [
    "flask",
    "tailwindcss",
    "vercel"
  ],
  "main": "app.py",
  "scripts": {
    "dev": "npx @tailwindcss/cli -i ./static/css/styles.css -o ./static/dist/output.css --watch",
    "build": "npx @tailwindcss/cli -i ./static/css/styles.css -o ./static/dist/output.css --minify"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/odhyp/flask-tailwindcss-starter.git"
  },
  "bugs": {
    "url": "https://github.com/odhyp/flask-tailwindcss-starter/issues"
  },
  "homepage": "https://github.com/odhyp/flask-tailwindcss-starter#readme",
  "dependencies": {
    "@tailwindcss/cli": "^4.0.2",
    "prettier": "^3.4.2",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "tailwindcss": "^4.0.1"
  }
}
